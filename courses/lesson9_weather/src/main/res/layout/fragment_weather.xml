<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.FragmentWeather">

    <ImageButton
        android:id="@+id/changeCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_baseline_add_circle_outline_24"
        android:tint="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/city"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/purple_200"
        tools:text="Minsk" />

    <!--    common-->
    <TextView
        android:id="@+id/date"
        style="@style/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/city"
        app:layout_constraintTop_toBottomOf="@id/city"
        tools:background="@color/purple_200"
        tools:text="23.02" />

    <ImageView
        android:id="@+id/weatherIcon"
        style="@style/imageBig"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date"
        tools:background="@color/purple_700" />

    <TextView
        android:id="@+id/temp"
        style="@style/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/weatherIcon"
        app:layout_constraintStart_toStartOf="@id/weatherIcon"
        app:layout_constraintTop_toBottomOf="@id/weatherIcon"
        tools:text="05\u00B0" />

    <TextView
        android:id="@+id/description"
        style="@style/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintEnd_toEndOf="@id/weatherIcon"
        app:layout_constraintStart_toStartOf="@id/weatherIcon"
        app:layout_constraintTop_toBottomOf="@id/temp"
        tools:background="@color/purple_500"
        tools:text="Snow" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <!--    next days-->
    <FrameLayout
        android:id="@+id/dayInfo1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dayInfo2"
        app:layout_constraintTop_toTopOf="@+id/vertical_guideline"
        tools:background="@color/purple_200">

        <include layout="@layout/day" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/dayInfo2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@id/dayInfo1"
        app:layout_constraintLeft_toRightOf="@id/dayInfo1"
        app:layout_constraintRight_toLeftOf="@id/dayInfo3"
        app:layout_constraintTop_toTopOf="@id/dayInfo1"
        tools:background="@color/purple_200">

        <include layout="@layout/day" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/dayInfo3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@id/dayInfo1"
        app:layout_constraintLeft_toRightOf="@id/dayInfo2"
        app:layout_constraintRight_toLeftOf="@id/dayInfo4"
        app:layout_constraintTop_toTopOf="@id/dayInfo1"
        tools:background="@color/purple_200">

        <include layout="@layout/day" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/dayInfo4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@dimen/small"
        app:layout_constraintBottom_toBottomOf="@id/dayInfo1"
        app:layout_constraintLeft_toRightOf="@id/dayInfo3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/dayInfo1"
        tools:background="@color/purple_200">

        <include layout="@layout/day" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>