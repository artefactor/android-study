<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--===============================================  -->
    <!--                 buttons                         -->
    <!--===============================================  -->
    <style name="flowButton">
        <item name="android:layout_margin">@dimen/size32</item>
        <item name="android:background">@color/teal_700</item>
    </style>

    <style name="buttonBig">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginRight">@dimen/size32</item>
        <item name="android:layout_marginLeft">@dimen/size32</item>
        <item name="android:layout_marginTop">@dimen/size16</item>
        <item name="android:layout_marginBottom">106dp</item>
        <item name="android:background">@color/teal_700</item>
    </style>

    <!--===============================================  -->
    <!--                 toolbars                        -->
    <!--===============================================  -->
    <style name="toolbar">
        <item name="android:background">@color/purple_500</item>
        <item name="android:padding">@dimen/size4</item>
    </style>

    <style name="buttonToolbar">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="toolbarTextlight">
        <item name="android:layout_gravity">fill_horizontal|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/size4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="toolbarText">
        <item name="android:layout_gravity">fill_horizontal|center_vertical</item>
        <item name="android:layout_marginRight">@dimen/size32</item>
        <item name="android:layout_marginLeft">@dimen/size32</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="searchTextStyle">
        <item name="android:drawablePadding">@dimen/size16</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingStart">@dimen/size4</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">@dimen/size16</item>
        <item name="android:textSize">@dimen/text_search</item>
    </style>
    <!--===============================================  -->

    <style name="card">
        <item name="android:paddingLeft">@dimen/size4</item>
        <item name="android:paddingRight">@dimen/size4</item>
        <item name="android:paddingTop">@dimen/size4</item>
        <item name="android:paddingBottom">@dimen/size20</item>
        <item name="android:background">@android:drawable/dialog_holo_light_frame</item>
    </style>

    <style name="camera_img">
        <item name="android:layout_width">@dimen/size64</item>
        <item name="android:layout_height">@dimen/size64</item>
        <item name="android:layout_margin">@dimen/size32</item>
        <item name="android:background">@color/purple_200</item>
    </style>

    <style name="work_status_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:checked">false</item>
        <item name="android:button">@null</item>
        <item name="android:drawableTop">@drawable/ic_repair</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="textView">
        <item name="android:layout_marginLeft">@dimen/size16</item>
        <item name="android:layout_marginRight">@dimen/size16</item>
        <item name="android:layout_marginTop">@dimen/size4</item>
        <item name="android:layout_marginBottom">@dimen/size4</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>